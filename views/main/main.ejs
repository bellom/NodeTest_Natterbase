<% include ../partials/header %>

<div class="container">
   <header class="jumbotron">
      <div class="container">
         <h2>WELCOME TO COUNTRY LIST!</h2>
         <p><a class="btn btn-primary btn-lg" href="/countries/new">Add New Country</a></p>
      </div>
   </header>

   <div class="row text-center" style="display:flex; flex-wrap: wrap;">
      <% camps.forEach(function(camp){ %>
         <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
               <div class="caption">
                  <h3><%= camp.country %></h3>
               </div>
            </div>
         </div>
      <% }); %>
   </div>
</div>

<% include ../partials/footer %>